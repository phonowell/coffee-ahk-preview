#alert
  width 6.4rem
  background-color #fff
  overflow hidden

  .container
    $box()
    display flex
    padding 16px
    min-height 80px

  .message
    margin auto
    font-size 14px
    color #777
    line-height 1.8
    word-break break-all

  .toolkit
    border-top 1px solid #eee

  .btn-toolkit
    display inline-block
    width 100%
    height 48px
    text-align center
    line-height @height
    background none
    color #bbb
    font-size 12px
    cursor pointer

    &:active
      background-color rgba(#000, 0.02)