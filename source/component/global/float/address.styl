$color = #fe9d10

#float-address
  width 7rem
  height 8rem
  height calc(8rem + env(safe-area-inset-bottom))
  background-color #fff
  border-radius 0.5rem 0.5rem 0 0 !important
  margin auto auto 0 !important
  top 0
  animation slideInFromBottom 500ms ease both !important

  .title
    $box()
    absolute left top 0.2rem
    width 100%
    height 1rem
    line-height @height
    font-size 0.4rem
    font-weight bold

  .placeholder
    width 100%
    height 1rem
    absolute left top 2rem
    line-height @height
    font-size 0.28rem
    color #666

  .item-input
    absolute left 0.3rem
    width 6.4rem
    height 1.7rem

    for n in 1 2 3
      &:nth-of-type({n})
        top 1.2rem + (n - 1) * 1.7rem

    .msg
      left 0.5rem
      top 0.2rem
      font-size 0.24rem
      color #999

  input
    $box()
    absolute left top 0.6rem
    width 100%
    height 1rem
    line-height @height
    padding 0 @height * 0.5
    font-size 0.3rem
    background-color #eee
    border-radius @height * 0.5
    border 0
    outline 0
    appearance none
    transition box-shadow 300ms

    &:focus
      box-shadow 0 0 0.1rem rgba(#000, 0.2) inset

  .scrollable
    absolute left 0.1rem top 1.2rem
    width 6.8rem
    height 5.2rem

    .item
      margin 0 0.2rem
      padding 0.2rem 0
      text-align left
      line-height 1.5
      border-top 1px solid #eee

      &:first-of-type
        border-top 0

    .name
      font-size 0.3rem

    .time
      font-size 0.2rem
      color #999

#btn-back-address, #btn-submit-address, #btn-toggle-address
  width 4rem
  height 0.8rem
  line-height @height
  left $middle(@width, 7rem)
  top 6.8rem
  background-color $color
  color #fff
  font-size 0.3rem
  border-radius @height * 0.5
  box-shadow 0 0.1rem 0.1rem rgba(#000, 0.1)

#btn-back-address
  left 0.3rem
  width 2rem
  background-color #ddd
  color #666

#btn-submit-address
  left auto
  right 0.3rem

#btn-toggle-address
  &.is-disabled
    opacity 0.5
    pointer-events none
    background-color #ddd
    color #666

  &.is-required
    &:before
      content '!'
      width 0.5rem
      height @width
      absolute right 0 - @width * 0.3 top 0 - @width * 0.3
      line-height @height
      font-size 0.3rem
      font-weight bold
      color #fff
      background-color red
      border-radius @width * 0.5