$color = #fe9d10

#float-batch-buy
  width 7rem
  height 8rem
  height calc(8rem + env(safe-area-inset-bottom))
  background-color #fff
  border-radius 0.5rem 0.5rem 0 0 !important
  margin auto auto 0 !important
  top 0
  animation slideInFromBottom 500ms ease both !important

  .msg
    &:nth-of-type(1)
      width 100%
      height 1rem
      line-height @height
      font-size 0.4rem
      font-weight bold
      top 0.2rem

      span
        color $color
        margin-left 0.25em

    &:nth-of-type(2)
      width 100%
      height 0.3rem
      top 1rem
      line-height @height
      font-size 0.2rem
      color #999

    &:nth-of-type(3)
      width 100%
      height 1rem
      top 1.2rem
      line-height @height
      font-size 0.32rem

    &:nth-of-type(4)
      height 0.6rem
      left 0.35rem
      top 3.6rem
      line-height @height
      font-size 0.24rem

    &:nth-of-type(5)
      width 100%
      left 0
      top 4.3rem
      background-color #fafafa
      color #555
      padding 0.25rem 0
      font-size 0.36rem

      b
        font-size 0.4rem
        font-weight bold
        color $color

      span
        display block
        font-size 0.24rem
        color #777
        text-decoration line-through
        margin-top 0.1rem

    &:nth-of-type(6)
      width 100%
      height 0.5rem
      line-height @height
      left 0
      bottom 0
      bottom env(safe-area-inset-bottom)
      font-size 0.24rem
      background-color rgba($color, 0.6)
      color #fff

#group-batch-buy
  width 6.5rem
  height 1.2rem
  absolute left $middle(@width, 7rem) top 2.2rem
  display flex

  .item
    $box()
    position relative
    flex-grow 1
    height 1.2rem
    margin 0 0.1rem
    line-height @height - 0.1rem
    font-size 0.28rem
    color #ccc
    border 0.05rem solid
    border-radius 0.2rem
    cursor pointer
    transition background-color 300ms ease, color 300ms ease, border-color 300ms ease
    overflow hidden

    &.is-selected
      background-color $color + 95%
      color $color
      border-color $color

    span
      display block
      height 0.4rem
      absolute left top
      transform-origin left top
      line-height @height
      margin 0
      padding 0 0.3rem 0 0.1rem
      font-size 0.24rem
      border-radius 0 0 @height 0
      background-color $color
      color #fff
      transform scale(0.85)

#btn-recharge-batch-buy
  width 2rem
  height 0.6rem
  right 0.35rem
  top 3.6rem
  line-height @height
  text-align right
  font-size 0.24rem
  color $color
  text-decoration underline

#btn-submit-batch-buy
  width 5rem
  height 1rem
  line-height @height
  left $middle(@width, 7rem)
  top 6rem
  background-color $color
  color #fff
  font-size 0.4rem
  font-weight bold
  border-radius @height * 0.5
  box-shadow 0 0.1rem 0.1rem rgba(#000, 0.1)

@keyframes slideInFromBottom
  0%
    opacity 0
    transform translateY(32px)

  100%
    opacity 1
    transform translateY(0)