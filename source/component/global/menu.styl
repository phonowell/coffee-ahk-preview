#menu
  width 6.4rem
  max-height calc(100% - 32px * 2)
  background-color #fff
  padding-bottom 48px + 2px
  overflow hidden

  .container
    width 100%

  .scrollbar-scrollable
    transform scaleY(0.96)

  .item
    $box()
    position relative
    width 100%
    height 48px
    text-align center
    line-height @height
    padding 0 16px
    border-bottom 1px solid rgba(#000, 0.05)
    font-size 14px
    color #777
    cursor pointer
    -webkit-tap-highlight-color rgba(#000, 0.02)

    &:active
      background-color rgba(#000, 0.02)

    &.is-marked
      color #222
      font-weight bold

  .toolkit
    absolute left bottom
    width 100%
    background-color #fff
    border-top 2px solid #eee

  .btn-toolkit
    display inline-block
    width 100%
    height 48px
    line-height @height
    background none
    color #bbb
    font-size 12px
    cursor pointer
    -webkit-tap-highlight-color rgba(#000, 0.02)

    &:active
      background-color rgba(#000, 0.02)