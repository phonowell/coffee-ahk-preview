#prompt
  fixed left 32px top 32px
  width calc(100% - 32px * 2)
  max-height calc(100% - 32px * 2)
  will-change opacity, transform
  background-color #fff
  z-index 135
  border-radius 16px
  overflow hidden
  font-size 0

  .shell-desktop &
    left calc((100% - 480px) * 0.5)
    max-width 480px

    .btn-toolkit
      &:active
        background-color rgba(#000, 0.02)

  .container
    $box()
    padding 16px
    min-height 80px

  .message
    margin auto
    text-align center
    font-size 14px
    color #777
    line-height 1.8
    word-break break-all
    user-select none

  input
    $box()
    width 100%
    height 32px
    text-align center
    line-height @height
    padding 0 16px
    margin 16px auto 0
    border-radius @height * 0.5
    background-color #eee
    border 0
    color #777
    font-size 12px
    outline 0

  .toolkit
    border-top 1px solid #eee

  .btn-toolkit
    display inline-block
    width 50%
    height 48px
    line-height @height
    background none
    color #bbb
    font-size 12px
    user-select none
    cursor pointer
    -webkit-tap-highlight-color rgba(#000, 0.02)

    &:last-of-type
      color #777