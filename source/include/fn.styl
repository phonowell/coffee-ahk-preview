$bgi($path)
  $size = image-size($path)
  background center center no-repeat
  background-size cover

  if ($size[0] * $size[1] <= 25600)
    background-image embedurl($path)
  else
    background-image url($path)

  width ($size[0] / 100) rem
  height ($size[1] / 100) rem

$box()
  box-sizing border-box

$ellipsis()
  overflow hidden
  text-overflow ellipsis
  white-space nowrap

$debug(type = 'black')
  if (type == 'black')
    background-color rgba(#000, 0.5)
  else
    background-color rgba(#fff, 0.5)

$middle($a, $b = 7.5rem)
  ($b - $a) * 0.5