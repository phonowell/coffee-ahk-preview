@import '../include/basic'
@import '../include/animation'

normalize-css()
global-reset()

html, body
  scroll-behavior smooth
  text-align center
  background-color #fafafa

#stage
  position relative
  width 100%
  min-height 100vh
  margin 0 auto
  text-align center
  overflow hidden
  font-size 0
  user-select none
  -webkit-tap-highlight-color rgba(#000, 0)

  .msg
    position absolute
    pointer-events none

  img[src^='https:@']
    background-color rgba(#000, 0.5)
    text-indent -255rem

#root
  &:empty
    & ~ iframe
      opacity initial
      pointer-events initial

  & ~ iframe
    opacity 0.5
    pointer-events none